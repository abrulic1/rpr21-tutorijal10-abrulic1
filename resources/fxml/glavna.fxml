    <center>
        <GridPane>
            <children>
                <TableView fx:id="tableViewGradovi" fixedCellSize="1.0" GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0" GridPane.vgrow="ALWAYS">
