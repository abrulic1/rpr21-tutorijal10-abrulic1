                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="colGradId" editable="false" prefWidth="92.39999675750732" text="ID">
                            <cellValueFactory>
                                <PropertyValueFactory property="testNumber" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colGradNaziv" editable="false" prefWidth="114.79998779296875" text="Naziv">
                            <cellValueFactory>
                                <PropertyValueFactory property="testName" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colGradStanovnika" editable="false" prefWidth="104.40000915527344" text="Stanovnika">
                            <cellValueFactory>
                                <PropertyValueFactory property="testTime" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colGradDrzava" editable="false" prefWidth="122.0" text="Država">
                            <cellValueFactory>
                                <PropertyValueFactory property="bestMatch" />
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                    <items>
                    </items>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
                </TableView>
            </children>
            <columnConstraints>
                <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
            </rowConstraints>
        </GridPane>
    </center>
    <right>
        <VBox alignment="TOP_CENTER" maxWidth="183.0" minWidth="120.0" prefHeight="402.0" prefWidth="126.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnDodajGrad" mnemonicParsing="false" onAction="#dodajGrad" prefHeight="25.0" prefWidth="110.0" text="Dodaj grad">
                    <VBox.margin>
                        <Insets top="4.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="btnDodajDrzavu" mnemonicParsing="false" onAction="#dodajDrzavu" prefHeight="25.0" prefWidth="110.0" text="Dodaj državu">
                    <VBox.margin>
                        <Insets top="4.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="btnIzmijeniGrad" mnemonicParsing="false" onAction="#izmijeniGrad" prefHeight="25.0" prefWidth="110.0" text="Izmijeni grad">
                    <VBox.margin>
                        <Insets top="4.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="btnObrisiGrad" mnemonicParsing="false" onAction="#obrisiGrad" prefHeight="25.0" prefWidth="110.0" text="Obriši grad">
                    <VBox.margin>
                        <Insets top="4.0" />
                    </VBox.margin>
                </Button>
            </children>
            <opaqueInsets>
                <Insets />
            </opaqueInsets></VBox>
    </right>
</BorderPane>
